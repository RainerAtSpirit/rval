{
  "testURL": "http://localhost",
  "transform": {
    "^.+\\.jsx?$": "babel-jest",
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "/tests/[^/]*.spec.[jt]sx?$",
  "moduleNameMapper": {
    "^@rval/(.*)": "<rootDir>/pkgs/$1/$1.ts"
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false,
      "tsConfig": "tsconfig.json"
    }
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
